<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Triangle arrow (rotated square) -->
    <item
        android:gravity="top|end"
        android:right="30dp"
        android:top="0dp">
        <rotate
            android:fromDegrees="45"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="rectangle">
                <solid android:color="#81d8d0" />
                <size
                    android:width="15dp"
                    android:height="15dp" />
            </shape>
        </rotate>
    </item>

    <!-- Main popup background -->
    <item
        android:right="10dp"
        android:top="5dp">
        <shape android:shape="rectangle">
            <solid android:color="#81d8d0" />
            <corners android:radius="8dp" />
        </shape>
    </item>

</layer-list>