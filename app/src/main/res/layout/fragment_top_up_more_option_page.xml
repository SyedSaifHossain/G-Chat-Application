<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".TopUpMoreOptionPageFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_gradient"
            android:orientation="vertical"
            android:paddingTop="50dp"
            tools:context=".TopUpMoreOptionPageFragment">

            <ImageView
                android:id="@+id/moreOptionProfileImg"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:scaleType="centerCrop"
                android:src="@drawable/profileimage" />

            <TextView
                android:id="@+id/userNameProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Aaron Loeb"
                android:textColor="#81d8d0"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_regular"/>

            <View
                android:id="@+id/moreOptionLine"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="15dp"
                android:background="#8ad8d0" />


            <LinearLayout
                android:id="@+id/accountLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/keyImg"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="30dp"
                    android:contentDescription="Key icon"
                    android:src="@drawable/keyicon" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/accountTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Account"
                        android:textColor="#81d8d0"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_regular"/>

                    <TextView
                        android:id="@+id/accountContentTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Security notification, change number"
                        android:textColor="#81d8d0"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_regular"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/privacyLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >

                <ImageView
                    android:id="@+id/privacyImg"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="30dp"
                    android:contentDescription="Key icon"
                    android:src="@drawable/privacyicon" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/privacyTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Privacy"
                        android:textColor="#81d8d0"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_regular"/>

                    <TextView
                        android:id="@+id/privacyContentTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Block contact, disappearing messages"
                        android:textColor="#81d8d0"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_regular"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/chatLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/chatImg"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="30dp"
                    android:contentDescription="Key icon"
                    android:src="@drawable/chatsicon" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/chatTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chats"
                        android:textColor="#81d8d0"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_regular"/>

                    <TextView
                        android:id="@+id/chatContentTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Theme, wallpappers, chats history"
                        android:textColor="#81d8d0"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_regular"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/notificationLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/notificationImg"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="30dp"
                    android:contentDescription="Key icon"
                    android:src="@drawable/notificationicon" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/notificationTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Notificaitions"
                        android:textColor="#81d8d0"
                        android:textSize="18sp"
                        android:textStyle="bold"

                        android:fontFamily="@font/poppins_regular"/>

                    <TextView
                        android:id="@+id/notificationContentTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Message, wallpappers, chats history"
                        android:textColor="#81d8d0"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_regular"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/appLanguageLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/appLanguageImg"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="30dp"
                    android:contentDescription="Key icon"
                    android:src="@drawable/languageicon" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/appLanguageTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="App language"
                        android:textColor="#81d8d0"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_regular"/>

                    <TextView
                        android:id="@+id/appLanguageContentTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="English (device's language)"
                        android:textColor="#81d8d0"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_regular"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/helpLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/helpImg"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="30dp"
                    android:contentDescription="Key icon"
                    android:src="@drawable/help" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/helpTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Help"
                        android:textColor="#81d8d0"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_regular"/>

                    <TextView
                        android:id="@+id/helpContentTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Help centre, contact us, privacy policy"
                        android:textColor="#81d8d0"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_regular"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/appUpdateLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/appUpdateImg"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="30dp"
                    android:contentDescription="Key icon"
                    android:src="@drawable/appupdate" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/appUpdateTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="App updates"
                        android:textColor="#81d8d0"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_regular"/>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/inviteLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/inviteImg"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="30dp"
                    android:contentDescription="Key icon"
                    android:src="@drawable/friendsicon" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/inviteTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Invite a friend"
                        android:textColor="#81d8d0"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_regular"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>


    <ImageView
        android:id="@+id/topUpMoreOptionBackImg"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/leftarrow" />
</RelativeLayout>