<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    tools:context=".SignupPageVerificationFragment">

    <ImageView
        android:id="@+id/signupVerificationBackArrow"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/leftarrow" />

    <ImageView
        android:id="@+id/signupVerificationImg"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:src="@drawable/gchatlogo" />

    <TextView
        android:id="@+id/signupVerificationCreateAccountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signupVerificationImg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Create Account"
        android:textColor="#6b6b6b"
        android:textSize="22sp"
        android:textStyle="bold" />

    <AutoCompleteTextView
        android:id="@+id/singupPageCountryEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signupVerificationCreateAccountText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="30dp"
        android:alpha="0.7"
        android:drawableEnd="@drawable/arrowforward"
        android:drawableTint="#6b6b6b"
        android:fontFamily="@font/roboto_bold"
        android:hint="Country/Region"
        android:padding="15dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#6b6b6b"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/singupVerificationEdtPhoneEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/singupPageCountryEdit"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="8dp"
        android:alpha="0.7"
        android:drawableEnd="@drawable/arrowforward"
        android:drawableTint="#6b6b6b"
        android:fontFamily="@font/roboto_bold"
        android:hint="Phone/Email"
        android:inputType="phone"
        android:padding="15dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#6b6b6b"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/verificationEdt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/singupVerificationEdtPhoneEmail"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="8dp"
        android:alpha="0.7"
        android:fontFamily="@font/roboto_bold"
        android:hint="Verification Code"
        android:inputType="number"
        android:padding="15dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#6b6b6b"
        android:textSize="18sp" />

    <Button
        android:id="@+id/sendCodeVerify"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/singupVerificationEdtPhoneEmail"
        android:layout_alignEnd="@+id/singupVerificationEdtPhoneEmail"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="7dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Send"
        android:textAllCaps="false"
        android:textColor="#555C5C"
        android:textSize="14sp"
        android:textStyle="bold"
        app:cornerRadius="5dp"
        app:strokeColor="#555C5C"
        app:strokeWidth="2dp" />


    <Button
        android:id="@+id/resendCodeVerify"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/verificationEdt"
        android:layout_alignStart="@+id/verificationEdt"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Resend Code?"
        android:textAllCaps="false"
        android:textColor="#6b6b6b"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/timeCount"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/verificationEdt"
        android:layout_alignEnd="@+id/verificationEdt"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/opensans_regular"
        android:text="0"
        android:textAllCaps="false"
        android:textColor="#81d8d0"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/verificationNextButton"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="50dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="#81d8d0"
        android:fontFamily="@font/roboto_bold"
        android:padding="10dp"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="18sp" />

</RelativeLayout>