<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupPageFragment"
    android:background="#000000">

    <ImageView
        android:id="@+id/signupPageImg"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/gchatsplashscreen"/>

    <TextView
        android:id="@+id/signupPageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signupPageImg"
        android:layout_centerHorizontal="true"
        android:text="Create Account"
        android:textColor="#555C5C"
        android:textSize="28sp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_regular" />

    <AutoCompleteTextView
        android:id="@+id/signupPageCountryEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signupPageText"
        android:layout_marginHorizontal="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:hint="Country/Region"
        android:padding="15dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#555C5C"
        android:fontFamily="@font/poppins_regular"
        android:textSize="22sp"
        android:alpha="0.7"
        android:drawableTint="#555C5C"
        android:drawableEnd="@drawable/arrowforward"/>

    <EditText
        android:id="@+id/signupPagePhoneEdt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:layout_below="@+id/signupPageCountryEdit"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="8dp"
        android:drawableTint="#555C5C"
        android:hint="Phone"
        android:padding="15dp"
        android:paddingVertical="20dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#555C5C"
        android:fontFamily="@font/poppins_regular"
        android:textSize="22sp"
        android:alpha="0.7"
        android:drawableEnd="@drawable/arrowforward"/>

    <TextView
        android:id="@+id/signupViaEmailTxt"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signupPagePhoneEdt"
        android:layout_alignStart="@+id/signupPagePhoneEdt"
        android:padding="15dp"
        android:text="Signup via email"
        android:textAllCaps="false"
        android:textColor="#636363"
        android:fontFamily="@font/poppins_regular"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/signupPageNextButton"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="40dp"
        android:backgroundTint="#0ABAB5"
        android:padding="15dp"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:fontFamily="@font/poppins_regular"
        android:textSize="24sp"
        android:layout_marginBottom="50dp"
        android:textStyle="bold"/>

</RelativeLayout>