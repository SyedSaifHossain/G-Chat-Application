<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <TextView
        android:id="@+id/tv_recall_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#999999"
        android:textSize="14sp"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start"
        app:layout_constraintTop_toBottomOf="@id/tv_recall_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/profileimage"
            android:layout_gravity="center_vertical"/>

        <LinearLayout
            android:id="@+id/layout_message_bubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_chat_received"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/tv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:maxWidth="240dp"
                android:layout_marginHorizontal="10dp"
                android:text="Received message text" />

            <TextView
                android:id="@+id/tv_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_marginTop="4dp"
                android:layout_gravity="end"
                android:textColor="#000000"
                android:text="10:00 AM"
                android:paddingBottom="15dp"
                android:layout_marginHorizontal="15dp"/>

            <!-- 语音消息气泡（微信风格） -->
            <LinearLayout
                android:id="@+id/voice_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/tv_message"
                app:layout_constraintStart_toStartOf="@id/tv_message"
                app:layout_constraintEnd_toEndOf="@id/tv_message">
                <ImageView
                    android:id="@+id/voice_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_voice_msg"
                    android:contentDescription="voice icon"
                    android:layout_marginStart="8dp" />
                <TextView
                    android:id="@+id/voice_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text='4"'
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp" />
            </LinearLayout>

            <!-- 图片消息显示 -->
            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginTop="6dp"
                android:scaleType="centerCrop"
                android:visibility="gone"
                android:adjustViewBounds="true"
                android:maxWidth="200dp"
                android:maxHeight="200dp"
                app:layout_constraintTop_toBottomOf="@id/tv_message"
                app:layout_constraintStart_toStartOf="@id/tv_message"
                app:layout_constraintEnd_toEndOf="@id/tv_message" />

            <!-- 视频消息缩略图和播放按钮 -->
            <FrameLayout
                android:id="@+id/video_container"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginTop="6dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/tv_message"
                app:layout_constraintStart_toStartOf="@id/tv_message"
                app:layout_constraintEnd_toEndOf="@id/tv_message">
                <ImageView
                    android:id="@+id/iv_video_thumb"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
                <ImageView
                    android:id="@+id/iv_play"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_play_circle"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </FrameLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>