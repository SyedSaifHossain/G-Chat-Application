<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/bg_gradient"
tools:context=".ProfileFragment">

<RelativeLayout
    android:id="@+id/profilePageHeader"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:layout_alignParentStart="true"
    android:layout_alignParentEnd="true"
    android:layout_alignParentTop="true"
    android:layout_marginBottom="10dp">

    <ImageView
        android:id="@+id/profileBackImg"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/leftarrow"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/meUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:fontFamily="@font/poppins_regular"
        android:text="Profile"
        android:textColor="#81d8d0"
        android:textSize="24sp"
        android:textStyle="bold"
        android:paddingTop="5dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/profileBackImg"/>

</RelativeLayout>

<View
    android:id="@+id/mePageLine"
    android:layout_width="match_parent"
    android:layout_height="3dp"
    android:background="#81d8d0"
    android:layout_below="@+id/profilePageHeader"
    android:layout_marginTop="15dp"
    android:layout_alignParentStart="true"
    android:layout_alignParentEnd="true"

    android:alpha="0.5"/>

<RelativeLayout
    android:id="@+id/profilePhotoLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_below="@+id/mePageLine"
    android:layout_alignParentStart="true"
    android:layout_alignParentEnd="true">

    <TextView
        android:id="@+id/profilePhotoeTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:fontFamily="@font/roboto_regular"
        android:text="Profile Photo"
        android:textColor="#81d8d0"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_centerVertical="true"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profilePhotoImg"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="40dp"
        android:src="@drawable/profileimage"
        android:layout_centerVertical="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/payServiceArrow"
        app:shapeAppearanceOverlay="@style/RoundedImageViewStyle" />

    <ImageView
        android:id="@+id/payServiceArrow"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/newarrowright"
        app:tint="#81d8d0"
        android:layout_marginEnd="20dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#81d8d0"
        android:layout_below="@+id/profilePhotoImg"
        android:layout_marginTop="25dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="20dp"
        android:alpha="0.5"/>
</RelativeLayout>




</RelativeLayout>