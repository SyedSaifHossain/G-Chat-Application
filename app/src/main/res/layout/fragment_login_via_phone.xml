<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".LoginViaPhoneFragment"
    android:background="#000000">

    <TextView
        android:id="@+id/LoginViaPhoneTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:text="Login Via Phone"
        android:fontFamily="@font/poppins_regular"/>

    <EditText
        android:id="@+id/phoneInputViaPhoneEdt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:layout_below="@+id/LoginViaPhoneTxt"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="50dp"
        android:drawableTint="#FFFFFF"
        android:hint="Phone Number"
        android:paddingLeft="20dp"
        android:paddingVertical="20dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="22sp"
        android:fontFamily="@font/poppins_regular"
        android:alpha="0.7"/>

    <EditText
        android:id="@+id/verifyInputViaPhoneEdt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_below="@+id/phoneInputViaPhoneEdt"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="8dp"
        android:hint="Verification code"
        android:paddingLeft="20dp"
        android:paddingVertical="20dp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/poppins_regular"
        android:textColorHint="#FFFFFF"
        android:drawableTint="#FFFFFF"
        android:textSize="22sp"
        android:alpha="0.7"/>


    <Button
        android:id="@+id/sendCode"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_below="@+id/LoginViaPhoneTxt"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="67dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="7dp"
        android:fontFamily="@font/poppins_regular"
        android:padding="5dp"
        android:text="Send"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="5dp"
        app:strokeColor="#FFFFFF"
        app:strokeWidth="2dp" />

    <TextView
        android:id="@+id/LoginViaMobile"
        android:layout_below="@+id/verifyInputViaPhoneEdt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_alignStart="@id/verifyInputViaPhoneEdt"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:text="Login via password"
        android:fontFamily="@font/poppins_regular"/>

    <Button
        android:id="@+id/loginViaPhoneBtn"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="30dp"
        android:backgroundTint="#DCD7D7"
        android:padding="15dp"
        android:text="Login"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="24dp"
        android:textStyle="bold"
        app:cornerRadius="15dp"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"/>

    <ImageButton
        android:id="@+id/button3"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:src="@drawable/arrowback"
        android:contentDescription="Arrow button" />

</RelativeLayout>