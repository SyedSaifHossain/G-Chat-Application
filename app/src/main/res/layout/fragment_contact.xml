<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ContactFragment"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/contactsLayout"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="#E0D9D9">

        <TextView
            android:id="@+id/contactsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:padding="12dp"
            android:text="Contacts"
            android:textColor="#312D2D"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/contactsTitle"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/addfriendsfilledicon"
            app:tint="#000000" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/contactsSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/contactsLayout">

        <ImageView
            android:id="@+id/searchIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="140dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/search" />

        <EditText
            android:id="@+id/contactSearchbar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="8dp"
            android:backgroundTint="@android:color/darker_gray"
            android:drawablePadding="16dp"
            android:gravity="center_vertical|center"
            android:hint="Search"
            android:textColorHint="#AFA9A9"
            android:textSize="20dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:theme="@android:style/Theme.DeviceDefault"/>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/contactRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:padding="8dp"
        android:layout_below="@id/contactsSearch"
        tools:listitem="@layout/contact_item"/>
</RelativeLayout>
