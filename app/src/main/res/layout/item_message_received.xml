<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="start"
    android:orientation="vertical"
    android:padding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/receivedSenderAvatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/profileimage"
            android:layout_alignBottom="@+id/bubbleGroupChatReceive"
            app:shapeAppearanceOverlay="@style/RoundedImageViewStyle" />

        <TextView
            android:id="@+id/receivedSenderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="2dp"
            android:layout_toEndOf="@+id/receivedSenderAvatar"
            android:text="发送者"
            android:textColor="#666"
            android:textSize="12sp"
            android:visibility="gone" />

        <!-- Horizontal LinearLayout to contain message text and time -->
        <RelativeLayout
            android:id="@+id/bubbleGroupChatReceive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/receivedSenderAvatar"
            android:background="@drawable/bg_chat_received"
            android:maxWidth="240dp"
            android:orientation="horizontal"
            android:padding="8dp">

            <!-- Message Text -->
            <com.vanniktech.emoji.EmojiTextView
                android:id="@+id/receivedMessageText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:paddingHorizontal="8dp"
                android:text="This is receive message"
                android:textColor="#000"
                android:layout_alignParentStart="true" />

            <!-- Time Text -->
            <TextView
                android:id="@+id/receivedMessageTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/receivedMessageText"
                android:text="10:00AM"
                android:textColor="#2C2C2C"
                android:textSize="10sp"
                android:paddingBottom="5dp"/>

        </RelativeLayout>

        <!-- Other message components (Image, Video, etc.) -->
        <ImageView
            android:id="@+id/receivedMessageImage"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/receivedSenderAvatar"
            android:adjustViewBounds="true"
            android:maxWidth="240dp"
            android:maxHeight="300dp"
            android:scaleType="centerCrop"
            android:visibility="gone" />

        <FrameLayout
            android:id="@+id/receivedVideoContainer"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/receivedSenderAvatar"
            android:visibility="gone"
            android:layout_alignParentTop="true">

            <ImageView
                android:id="@+id/receivedMessageVideo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxHeight="300dp"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/receivedVideoPlayIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_play_circle"
                app:tint="@color/white" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/receivedMessageVoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/receivedSenderAvatar"
            android:background="@drawable/bg_chat_received"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/receivedVoicePlayButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_play_circle" />

            <TextView
                android:id="@+id/receivedVoiceDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0s"
                android:textColor="#2C2C2C"
                android:textSize="14sp" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/receivedMessageFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_chat_received"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/document" />

        <TextView
            android:id="@+id/receivedFileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="200dp"
            android:text="文件"
            android:textColor="#000"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>