<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".WalletFragment"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient">

    <RelativeLayout
        android:id="@+id/walletHeaderLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">

        <ImageView
            android:id="@+id/walletBackImg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/leftarrow"
            app:tint="#0ABAB5" />

        <TextView
            android:id="@+id/headerTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/poppins_regular"
            android:padding="12dp"
            android:text="Transactions"
            android:textColor="#81d8d0"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/coinIcon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/goldicon"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/balanceTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:fontFamily="@font/poppins_regular"
        android:padding="12dp"
        android:text="My Balance"
        android:textColor="#81d8d0"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/currencyTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_regular"
            android:text="A$"
            android:layout_marginEnd="10dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@id/tvBalance"
            android:textColor="#81d8d0"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/currencyTxt"
            android:layout_marginTop="-45dp"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/poppins_regular"
            android:text="735"
            android:textColor="#81d8d0"
            android:textSize="50sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/productTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:drawableEnd="@drawable/arrowright"
            android:drawableTint="#636363"
            android:fontFamily="@font/poppins_regular"
            android:text="Medicine, pet shop"
            android:textColor="#636363"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_below="@id/tvBalance"/>

    </RelativeLayout>

    <Button
        android:id="@+id/topUpBtn"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="70dp"
        android:backgroundTint="#6b6b6b"
        android:padding="10dp"
        android:text="Top Up"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="26sp"
        android:textStyle="bold"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/roboto_bold"/>

    <Button
        android:id="@+id/withdrawBtn"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="70dp"
        android:backgroundTint="#6b6b6b"
        android:padding="10dp"
        android:text="Withdraw"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="26sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto_bold"/>

</LinearLayout>