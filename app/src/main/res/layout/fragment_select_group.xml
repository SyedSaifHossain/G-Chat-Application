<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SelectGroupFragment"
    android:background="#101014">

    <RelativeLayout
        android:id="@+id/select_group_layout"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="#18181A">

        <ImageView
            android:id="@+id/select_group_back_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/leftarrow"
            android:layout_marginStart="20dp"
            app:tint="#81d8d0"/>

        <TextView
            android:id="@+id/select_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Select Group"
            android:textColor="#81d8d0"
            android:textSize="20sp" />
    </RelativeLayout>

    <!-- 搜索框 -->
    <EditText
        android:id="@+id/et_search_group"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@id/select_group_layout"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/searchbar_bg"
        android:drawableStart="@drawable/searchimg"
        android:drawablePadding="10dp"
        android:fontFamily="@font/roboto_regular"
        android:hint="Search"
        android:paddingLeft="20dp"
        android:textColor="#000000"
        android:textColorHint="#2f4e4b"
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/select_group_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/et_search_group"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:paddingTop="12dp"
        android:padding="0dp"
        tools:listitem="@layout/selectgroup_list_item"
        android:scrollbars="vertical" />

</RelativeLayout>


