<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="end"
    android:orientation="vertical"
    android:padding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profileSend"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/profileimage"
            app:shapeAppearanceOverlay="@style/RoundedImageViewStyle" />

        <!-- LinearLayout for text and time side by side -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginEnd="8dp"
            android:padding="8dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/profileSend"
            android:background="@drawable/bg_chat_sent">

            <!-- Sent message text -->
            <com.vanniktech.emoji.EmojiTextView
                android:id="@+id/sentMessageText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:maxWidth="240dp"
                android:paddingBottom="8dp"
                android:paddingTop="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="8dp"
                android:gravity="start"
                android:text="This is text message"
                android:layout_centerVertical="true"
                android:layout_alignParentTop="true"/>

            <!-- Sent message time (next to text) -->
            <TextView
                android:id="@+id/sentMessageTime"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@+id/sentMessageText"
                android:text="10:00 am"
                android:textColor="#AAA"
                android:textSize="10sp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/sentMessageImage"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/profileSend"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="8dp"
            android:adjustViewBounds="true"
            android:maxWidth="240dp"
            android:maxHeight="300dp"
            android:scaleType="centerCrop"
            android:visibility="gone" />

        <FrameLayout
            android:id="@+id/sentVideoContainer"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/profileSend"
            android:layout_marginEnd="8dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/sentMessageVideo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxHeight="300dp"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/sentVideoPlayIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_play_circle"
                app:tint="@android:color/white" />

        </FrameLayout>

        <!-- LinearLayout for sent voice message -->
        <LinearLayout
            android:id="@+id/sentMessageVoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_chat_sent"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:layout_toStartOf="@+id/profileSend"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="8dp">

            <ImageView
                android:id="@+id/sentVoicePlayButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_play_circle"
                android:layout_marginEnd="8dp"/>

            <!-- Sent voice duration (next to play button) -->
            <TextView
                android:id="@+id/sentVoiceDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0s"
                android:textColor="#000"
                android:textSize="14sp"/>

            <!-- Sent voice time (next to the voice duration) -->
            <TextView
                android:id="@+id/sentVoiceTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#AAA"
                android:text="10:00 am"
                android:layout_marginStart="8dp"
                android:gravity="end"
                android:layout_alignParentTop="true"/>
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/sentMessageFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_chat_sent"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/document"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/sentFileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="文件"
            android:textColor="#000"
            android:textSize="14sp"
            android:maxWidth="200dp"/>

    </LinearLayout>

</LinearLayout>