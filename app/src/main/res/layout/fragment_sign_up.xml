<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SignUpFragment"
    android:orientation="vertical"
    android:background="#000000">

    <ImageView
        android:id="@+id/signupImg"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/gchatsplashscreen"/>

    <TextView
        android:id="@+id/CreateAccountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signupImg"
        android:layout_centerHorizontal="true"
        android:text="Create Account"
        android:textColor="#555C5C"
        android:textSize="28sp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_regular" />

    <AutoCompleteTextView
        android:id="@+id/countryEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/CreateAccountText"
        android:layout_marginHorizontal="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:hint="Country/Region"
        android:padding="15dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#555C5C"
        android:fontFamily="@font/poppins_regular"
        android:textSize="22sp"
        android:alpha="0.7"
        android:drawableTint="#555C5C"
        android:drawableEnd="@drawable/arrowforward"/>

    <EditText
        android:id="@+id/edtPhoneEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:layout_below="@+id/countryEdit"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="8dp"
        android:drawableTint="#555C5C"
        android:hint="Phone/Email"
        android:padding="15dp"
        android:paddingVertical="20dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#555C5C"
        android:fontFamily="@font/poppins_regular"
        android:textSize="22sp"
        android:alpha="0.7"
        android:drawableEnd="@drawable/arrowforward"/>
    <Button
        android:id="@+id/sendCode"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtPhoneEmail"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="8dp"
        android:text="Send the code"
        android:textAllCaps="false"
        android:textColor="#0ABAB5"
        android:fontFamily="@font/poppins_regular"
        android:textSize="16sp"/>
    <EditText
        android:id="@+id/verificationEdt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sendCode"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="16dp"
        android:hint="Enter verification code"
        android:inputType="number"
        android:maxLength="6"
        android:padding="15dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#555C5C"
        android:fontFamily="@font/poppins_regular"
        android:textSize="22sp"
        android:alpha="0.7"/>

    <Button
        android:id="@+id/nextButton"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="40dp"
        android:backgroundTint="#0ABAB5"
        android:padding="15dp"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:fontFamily="@font/poppins_regular"
        android:textSize="24sp"
        android:layout_marginBottom="50dp"
        android:textStyle="bold"/>

    <ImageButton
        android:id="@+id/button2"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:src="@drawable/arrowback"
        android:contentDescription="Arrow button" />


</RelativeLayout>