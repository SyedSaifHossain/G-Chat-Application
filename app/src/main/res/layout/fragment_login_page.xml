<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".LoginPage"
        android:background="@drawable/bg_gradient">

    <ImageView
        android:id="@+id/loginBackArrow"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:src="@drawable/leftarrow"/>

        <ImageView
            android:id="@+id/gchatLogoSignInNext"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="110dp"
            android:src="@drawable/gchatlogo"/>

        <TextView
            android:id="@+id/welcomeTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:text="Welcome back"
            android:textColor="#6b6b6b"
            android:textStyle="bold"
            android:textSize="22sp"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal"
            android:layout_below="@+id/gchatLogoSignInNext" />

        <EditText
            android:id="@+id/phoneLoginEdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_below="@+id/welcomeTxt"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/roboto_bold"
            android:hint="Phone/Email"
            android:padding="10dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#6b6b6b"
            android:textSize="18sp"
            android:alpha="0.7"
            android:drawableEnd="@drawable/arrowforward"
            android:drawableTint="#6b6b6b"/>

        <EditText
            android:id="@+id/passwordLoginEdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:layout_below="@+id/phoneLoginEdt"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="8dp"
            android:hint="Password"
            android:padding="10dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#6b6b6b"
            android:textSize="18sp"
            android:fontFamily="@font/roboto_bold"
            android:alpha="0.7"
            android:drawableEnd="@drawable/arrowforward"
            android:drawableTint="#6b6b6b"/>

        <Button
            android:id="@+id/loginButton"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/passwordLoginEdt"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#81d8d0"
            android:padding="10dp"
            android:text="Login"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_bold"/>


    <TextView
        android:id="@+id/backToSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/loginButton"
        android:layout_marginTop="10dp"
        android:text="or signup"
        android:textColor="#6b6b6b"
        android:gravity="center_horizontal"
        android:fontFamily="@font/roboto_bold"
        android:textSize="16sp"
        android:textStyle="bold"/>

    </RelativeLayout>