<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".LoginPage"
        android:background="#000000">

        <ImageView
            android:id="@+id/gchatLogoSignInNext"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:src="@drawable/gchatsplashscreen"/>

        <TextView
            android:id="@+id/welcomeTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:text="Welcome back"
            android:textColor="#636363"
            android:textStyle="bold"
            android:textSize="28sp"
            android:gravity="center_horizontal"
            android:layout_below="@+id/gchatLogoSignInNext" />

        <EditText
            android:id="@+id/phoneLoginEdt"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:inputType="text"
            android:layout_below="@+id/welcomeTxt"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="45dp"
            android:fontFamily="@font/poppins_regular"
            android:hint="Phone/Email"
            android:paddingLeft="20dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#636363"
            android:textSize="22sp"
            android:alpha="0.7"
            android:drawableEnd="@drawable/arrowforward"
            android:drawableTint="#636363"/>

        <EditText
            android:id="@+id/passwordLoginEdt"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:inputType="textPassword"
            android:layout_below="@+id/phoneLoginEdt"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="15dp"
            android:hint="Password"
            android:paddingLeft="20dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#636363"
            android:textSize="22sp"
            android:fontFamily="@font/poppins_regular"
            android:alpha="0.7"
            android:drawableEnd="@drawable/arrowforward"
            android:drawableTint="#636363"/>

        <Button
            android:id="@+id/loginButton"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/passwordLoginEdt"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#0ABAb5"
            android:padding="10dp"
            android:text="Log In"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_regular"
            android:textSize="24sp"
            android:textStyle="bold"/>


    <TextView
        android:id="@+id/backToSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/loginButton"
        android:layout_marginTop="10dp"
        android:text="or signup"
        android:textColor="#636363"
        android:gravity="center_horizontal"
        android:fontFamily="@font/poppins_regular"
        android:textSize="20sp"
        android:textStyle="bold"/>

    </RelativeLayout>