<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginViaEmailFragment"
    android:background="@drawable/bg_gradient">

    <ImageView
        android:id="@+id/loginViaEmailBackArrow"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/leftarrow"/>

    <ImageView
        android:id="@+id/loginViaEmailImage"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="110dp"
        android:src="@drawable/gchatlogo"/>

    <TextView
        android:id="@+id/loginViaEmailCreateAccountTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginViaEmailImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Create Account"
        android:textColor="#6b6b6b"
        android:textSize="26sp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_regular" />


    <EditText
        android:id="@+id/loginViaEmailEdtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/loginViaEmailCreateAccountTxt"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="30dp"
        android:hint="Email"
        android:padding="10dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#6b6b6b"
        android:fontFamily="@font/poppins_regular"
        android:textSize="20sp"
        android:alpha="0.7"
        android:drawableTint="#6b6b6b"
        android:drawableEnd="@drawable/arrowforward"/>

    <!-- New Password Field -->
    <EditText
        android:id="@+id/loginViaEmailEdtPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_below="@+id/loginViaEmailEdtEmail"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="8dp"
        android:hint="Password"
        android:padding="10dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#6b6b6b"
        android:fontFamily="@font/poppins_regular"
        android:textSize="20sp"
        android:alpha="0.7"
        android:drawableTint="#6b6b6b"
        android:drawableEnd="@drawable/arrowforward"/>

    <TextView
        android:id="@+id/loginViaPhoneTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginViaEmailEdtPassword"
        android:layout_alignStart="@+id/loginViaEmailEdtPassword"
        android:layout_marginTop="8dp"
        android:alpha="0.7"
        android:fontFamily="@font/poppins_regular"
        android:textColor="#6b6b6b"
        android:text="Login via phone"
        android:textSize="20sp"
        android:layout_marginStart="10dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/loginViaEmailVerificationNextButton"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/loginViaPhoneTxt"
        android:layout_marginHorizontal="50dp"
        android:backgroundTint="#81d8d0"
        android:layout_marginTop="10dp"
        android:padding="15dp"
        android:text="Login"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold" />

</RelativeLayout>