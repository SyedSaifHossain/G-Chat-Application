<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".SignInFragment">

    <ImageView
        android:id="@+id/gchatLogo"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/gchatsplashscreen"/>

    <AutoCompleteTextView
        android:id="@+id/regionEdt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gchatLogo"
        android:layout_toEndOf="@+id/gchatLogo"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:hint="Region"
        android:paddingVertical="20dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#636363"
        android:paddingStart="15dp"
        android:textSize="22dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:alpha="0.7"/>

    <!-- Country Code TextView -->

    <ImageView
        android:id="@+id/arrowImg"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/gchatLogo"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="38dp"
        android:src="@drawable/arrowforward"
        app:tint="#636363" />

    <TextView
        android:id="@+id/countryCodeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/regionEdt"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:paddingStart="15dp"
        android:text="+1"
        android:textColor="#636363"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/phoneNumberEdt"
        android:layout_width="match_parent"
        android:layout_below="@+id/regionEdt"
        android:layout_height="wrap_content"
        android:paddingVertical="20dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/countryCodeTextView"
        android:alpha="0.7"
        android:layout_marginTop="8dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:hint="Enter phone number"
        android:paddingStart="15dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#636363"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/loginViaEmailTxt"
        android:layout_below="@id/phoneNumberEdt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_alignStart="@id/countryCodeTextView"
        android:text="Login via email"
        android:textColor="#636363"
        android:layout_marginStart="15dp"
        android:textSize="18sp"
        android:fontFamily="@font/poppins_regular" />

    <Button
        android:id="@+id/signInButton"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="#0ABAB5"
        android:fontFamily="@font/poppins_regular"
        android:padding="15dp"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="24dp"
        android:textStyle="bold"/>

    <ImageButton
        android:id="@+id/button2"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:src="@drawable/arrowback"
        android:contentDescription="Arrow button" />

</RelativeLayout>
