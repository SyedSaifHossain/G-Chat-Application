<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginHorizontal="20dp"
        android:padding="15dp">

        <CheckBox
            android:id="@+id/new_chat_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp"
            android:button="@drawable/circle_checkbox"
            android:layout_alignParentTop="true"/>

        <ImageView
            android:id="@+id/new_chats_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/new_chat_checkbox"
            android:scaleType="centerCrop"
            android:src="@drawable/cityimg" />

        <TextView
            android:id="@+id/friend_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/new_chats_img"
            android:textColor="@android:color/black"
            android:text="Anything"
            android:textSize="18sp" />
    </RelativeLayout>

</RelativeLayout>